%h2 Businesses
%br
%br

= form_for @business do |f|
  .row
    .col-md-8
      %form
        .row
          .col-md-6
            %fieldset.form-group
              = f.text_field :name, class: "form-control", placeholder: "Business Name"
            %fieldset.form-group
              = f.text_field :website, class: "form-control", placeholder: "Business website"
            %fieldset.form-group.action
              = f.submit "Submit business", class: "btn btn-default btn-block"

          .col-md-6
            %fieldset.form-group
              = f.text_area :description, class: "form-control", placeholder: "Description", rows: "5"
    .col-md-4

    .col-md-8
    .col-md-4

%br
%br

- @businesses.each do |business|
  %br
  .row
    .col-md-8
      .row
        .col-md-6
          %p.text-left 
            %span.glyphicon.glyphicon-star(aria-hidden="true")
            %span.glyphicon.glyphicon-star(aria-hidden="true")
            %span.glyphicon.glyphicon-star(aria-hidden="true")
            %span.glyphicon.glyphicon-star-empty(aria-hidden="true")
            %span.glyphicon.glyphicon-star-empty(aria-hidden="true")
          %p.text-left= "#{business.name}"
        .col-md-6
          %br
          %br
          %br
      %p.text-justify= business.description
    .col-md-4
  %br
  %br