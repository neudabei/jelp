%h2= "#{@user.full_name}'s reviews"


- @user.reviews.each do |review|
  %br
  .row
    .col-md-8
      .row
        .col-md-6
          %p.text-left 
            - 5.times do |i|
              %span{class: "glyphicon glyphicon-star#{"-empty" if review.stars < i+1}", 'aria-hidden' => 'true' } 
          %p.text-left& Review for #{link_to review.business.name, review.business}
        .col-md-6
          %p.text-right= ctime_ago_in_words(review.created_at)
          %br
          %br
      %p.text-justify= review.body
    .col-md-4
  %br
  %br